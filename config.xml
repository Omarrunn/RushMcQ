<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.rushmcq" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Rush McQ</name>
    <description>Multiple Choice Quiz App</description>
    <author email="you@example.com">Designed By: Dr.Omar AL-Humaidy</author>

    <!-- General Preferences -->
    <preference name="Fullscreen" value="true"/>
    <preference name="Orientation" value="portrait"/>
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="SplashScreenDelay" value="3000"/>
    <preference name="SplashMaintainAspectRatio" value="true"/>
    <preference name="FadeSplashScreenDuration" value="500"/>
    <preference name="SplashShowOnlyFirstTime" value="false"/>

    <!-- Android 12+ Splash Config -->
    <preference name="AndroidWindowSplashScreenAnimatedIcon" value="resources/icon.png"/>
    <preference name="AndroidWindowSplashScreenBackground" value="#FFFFFF"/>

    <!-- Icons & Splash Screens -->
    <platform name="android">
        <!-- Icons -->
        <icon density="ldpi" src="resources/icon.png"/>
        <icon density="mdpi" src="resources/icon.png"/>
        <icon density="hdpi" src="resources/icon.png"/>
        <icon density="xhdpi" src="resources/icon.png"/>
        <icon density="xxhdpi" src="resources/icon.png"/>
        <icon density="xxxhdpi" src="resources/icon.png"/>

        <!-- Splash Screens -->
        <splash density="port-ldpi" src="resources/splash.png"/>
        <splash density="port-mdpi" src="resources/splash.png"/>
        <splash density="port-hdpi" src="resources/splash.png"/>
        <splash density="port-xhdpi" src="resources/splash.png"/>
        <splash density="port-xxhdpi" src="resources/splash.png"/>
        <splash density="port-xxxhdpi" src="resources/splash.png"/>
    </platform>

    <!-- Plugins -->
    <plugin name="cordova-plugin-androidx-adapter" spec="^1.1.3"/>
</widget>
